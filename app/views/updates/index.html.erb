<p id="notice"><%= notice %></p>

<h1>Listing Updates</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>User</th>
      <th>Savings amount</th>
      <th>Monthly savings</th>
      <th>Interest rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @updates.each do |update| %>
      <tr>
        <td><%= update.first_name %></td>
        <td><%= update.user_id %></td>
        <td><%= update.savings_amount %></td>
        <td><%= update.monthly_savings %></td>
        <td><%= update.interest_rate %></td>
        <td><%= link_to 'Show', update %></td>
        <td><%= link_to 'Edit', edit_update_path(update) %></td>
        <td><%= link_to 'Destroy', update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

