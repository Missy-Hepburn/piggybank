<h1>My budget</h1>

<table width="400">
  <thead>
    <tr>
      <th>Monthly:</th>
      <th>Weekly:</th>
      <th>Daily:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <tr>
      <% @usersbudgets.each do |budget| %>
      <td><%= budget.monthly_budget %>£</td>
      <td><%= budget.weekly_budget %>£</td>
      <td><%= budget.daily_budget %>£</td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<a class="btn btn-default" href="/budgets/new" role="button">Update details</a>
